<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jraf.android.latoureiffel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:name="org.jraf.android.worldtour.app.Application"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme" >

        <!-- Provider -->
        <provider
            android:name="org.jraf.android.worldtour.provider.WorldtourProvider"
            android:authorities="org.jraf.android.worldtour.provider" />

        <!-- Main -->
        <activity
            android:name="org.jraf.android.worldtour.app.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pick webcam -->
        <activity
            android:name="org.jraf.android.worldtour.app.pickwebcam.PickWebcamActivity"
            android:label="@string/menu_pick" />

        <!-- Service -->
        <service android:name="org.jraf.android.worldtour.app.main.service.WorldTourService" />
    </application>

</manifest>